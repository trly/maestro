{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Maestro",
  "version": "0.3.0",
  "identifier": "dev.trly.maestro",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun vite dev --port 5173 --strictPort",
    "beforeBuildCommand": "bun vite build"
  },
  "app": {
    "windows": [
      {
        "title": "Maestro - AI Prompt Orchestrator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 Sourcegraph",
    "category": "DeveloperTool",
    "shortDescription": "AI Prompt Orchestrator",
    "longDescription": "Maestro orchestrates AI prompt execution across multiple repositories using the Amp SDK.",
    "macOS": {
      "signingIdentity": "-",
      "entitlements": "entitlements.plist"
    }
  }
}
