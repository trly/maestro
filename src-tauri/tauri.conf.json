{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Maestro",
  "version": "0.2.6",
  "identifier": "dev.trly.maestro",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm vite dev --port 5173 --strictPort",
    "beforeBuildCommand": "pnpm vite build && pnpm run build:executor"
  },
  "app": {
    "windows": [
      {
        "title": "Maestro - AI Prompt Orchestrator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "deb"
    ],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../dist/amp-executor.js",
      "../node_modules/@sourcegraph/amp-sdk/**/*",
      "../package.json"
    ],
    "copyright": "Copyright Â© 2025 Sourcegraph",
    "category": "DeveloperTool",
    "shortDescription": "AI Prompt Orchestrator",
    "longDescription": "Maestro orchestrates AI prompt execution across multiple repositories using the Amp SDK.",
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
